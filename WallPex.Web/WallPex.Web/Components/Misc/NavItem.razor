<div class="nav-item px-3">
    <NavLink class="nav-link" href="@Href" Match="NavLinkMatch.All">
        <span class="fas @Icon"></span> @Name
    </NavLink>
</div>

@code {
    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public string? Icon { get; set; }
}
